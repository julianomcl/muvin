<% provide(:title, 'updateemail') %>
<h1>Cadastre-se</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |u| %>
        <%= render 'shared/error_messages' %>


        <%= u.label :current_email %>
        <%= u.email_field :current_email, class: 'form-control' %>

        <%= u.label :future_email %>
        <%= u.email_field :future_email, class: 'form-control' %>

        <%= u.submit 'Confirm', id: 'updateemail', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>